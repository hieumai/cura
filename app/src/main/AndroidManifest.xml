<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kms.cura">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".model.VolleyHelper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".view.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.AccountTypeSelectionActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".view.activity.PatientProfileViewActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity android:name=".view.activity.RegisterDoctorActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity android:name=".view.activity.PatientSignUpActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity android:name=".view.PatientHomeActivity"></activity>
        <activity
            android:name=".view.activity.AccountTypeSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.RegisterDoctorActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.activity.PatientSignUpActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.navigationDrawer"
            android:label="@string/title_activity_navigation_drawer" />
        <activity android:name=".view.activity.PatientView"></activity>
    </application>

</manifest>