<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kms.cura.view.fragment.ForgotPasswordStepThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_16"
        android:layout_marginTop="@dimen/margin_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/step_3"
            android:textSize="@dimen/textSizeTitle_25"
            android:textColor="@color/black"
            android:padding="@dimen/padding_5"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_reset"
            android:textColor="@color/black"
            android:textSize="@dimen/docText_20"
            android:padding="@dimen/padding_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_password"
            android:layout_marginTop="@dimen/margin_40"
            android:textColor="@color/black"
            android:layout_margin="@dimen/padding_5"
            android:textSize="@dimen/docText_16"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/edtEnterNewPassword"
            android:textSize="@dimen/docText_18"
            android:layout_margin="@dimen/padding_5"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:id="@+id/edtReEnterPassword"
            android:textSize="@dimen/docText_18"
            android:hint="@string/re_enter_new_password"
            android:layout_margin="@dimen/padding_5"
            android:inputType="textPassword"
            android:fontFamily="sans-serif"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/background_material_btn"
            android:text="@string/done"
            android:textColor="@color/white"
            android:id="@+id/btnDone"
            android:textSize="@dimen/docText_16"/>
    </LinearLayout>

</FrameLayout>
