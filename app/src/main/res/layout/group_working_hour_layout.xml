<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:background="@drawable/working_time_icon"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WorkingTime"
            android:textSize="@dimen/docText_18"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="@dimen/docText_16"
            android:layout_height="@dimen/docText_16"
            android:background="@drawable/down_arrow"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>