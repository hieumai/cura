<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        >
        <ImageView
            android:layout_width="@dimen/imageviewSize"
            android:layout_height="@dimen/imageviewSize"
            android:id="@+id/ivAccountAvatar"
            android:background="@drawable/profile_anon128"
            android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="aaaaaaaaaaa"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/txtName"
                android:textSize="@dimen/textSizeTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/padding_16"
                android:layout_height="@dimen/padding_16"
                android:layout_gravity="center_vertical"
                android:id="@+id/ivGender"
                android:background="@drawable/gender_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Gender "
                android:layout_marginLeft="10sp"
                android:textSize="@dimen/docText_18"
                android:id="@+id/txtGender"
                />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopProfile"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:layout_gravity="center_vertical"
            android:id="@+id/ivDOB"
            android:background="@drawable/dob_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Date of Birth "
            android:textSize="@dimen/docText_18"
            android:layout_marginLeft="10sp"
            android:id="@+id/txtDOB" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopProfile"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/padding_16"
                android:layout_height="@dimen/padding_16"
                android:layout_gravity="center_vertical"
                android:id="@+id/ivLocation"
                android:background="@drawable/location_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Location "
                android:id="@+id/txtLocation"
                android:textSize="@dimen/docText_18"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopProfile"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/padding_16"
                android:layout_height="@dimen/padding_16"
                android:layout_gravity="center_vertical"
                android:id="@+id/ivInsurance"
                android:background="@drawable/insurance_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Insurance "
                android:textSize="@dimen/docText_18"
                android:id="@+id/txtInsurance"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopProfile"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/padding_16"
                android:layout_height="@dimen/padding_16"
                android:layout_gravity="center_vertical"
                android:background="@drawable/concern_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/healthConcerns"
                android:textSize="@dimen/docText_18"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtHealthConcern"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
</LinearLayout>