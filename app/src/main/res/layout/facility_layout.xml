<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopProfile"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/padding_16"
            android:layout_height="@dimen/padding_16"
            android:layout_gravity="center_vertical"
            android:background="@drawable/facility_icon" />

        <TextView
            android:id="@+id/txtDoctorFacilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:textSize="@dimen/docText_18"
            android:textStyle="bold"
            tools:text="Facility Name" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtDoctorFacilityAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:textSize="@dimen/docText_18"
        tools:text="Address" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDoctorFacilityPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:textSize="@dimen/docText_18"
            tools:text="Phone Number" />

        <TextView
            android:id="@+id/btnFacilityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_8"
            android:text="@string/detail"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/docText_18" />
    </LinearLayout>

</LinearLayout>