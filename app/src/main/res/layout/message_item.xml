<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutMessageItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinner_50"
            android:padding="@dimen/padding_5">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/border"
                android:padding="@dimen/padding_5"
                android:src="@drawable/profile_anon128" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_8">

                <TextView
                    android:id="@+id/tvMesName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="@string/Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/docText_18" />

                <TextView
                    android:id="@+id/tvMesTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/Time"
                    android:textSize="@dimen/docText_14" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:padding="@dimen/padding_5"
            android:text="@string/message"
            android:textColor="@color/black"
            android:textSize="@dimen/docText_14"/>
    </LinearLayout>

</LinearLayout>